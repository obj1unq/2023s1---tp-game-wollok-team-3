import wollok.game.*
import cursor.*

program juego {
	game.title("Buscaminas")
	game.addVisualCharacter(cursor)
	
	//Configuramos el nivel
	game.cellSize(32)
	game.width(10)
	game.height(10)
	
	//Establecemos los controles
	keyboard.space().onPressDo { cursor.revelarCelda()}
	keyboard.m().onPressDo { cursor.marcarCelda()}
	
	
	game.start()
}